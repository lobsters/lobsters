<div class="box wide">
  <%= form_with url: twofa_login_url do |f| %>
    <p>
    Enter the current TOTP code from your TOTP application:
    </p>

    <p>
    <%= f.label :totp_code, "TOTP Code:" %>
    <%= f.text_field :totp_code,
      :inputmode => "numeric",
      :pattern => "[0-9]+",
      :size => 10,
      :autocomplete => "one-time-code",
      :autofocus => true,
      :class => "totp_code" %>
    <br />
    </p>

    <p>
    <%= f.submit "Login" %>
    </p>
  <% end %>
</div>

