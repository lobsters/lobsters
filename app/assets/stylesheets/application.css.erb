	--color-lobsters-hat-sysop-brim-stroke: #2c2222;

	/* mobile */
	--color-mobile-story-border: #1c1c1c;
	--color-mobile-story-liner-bg: #0c0c0c;
	--color-mobile-story-comments-bg: #101010;
