<div class="box wide">
  <div class="legend right">
    <%= link_to_filter('unread') %> |
    <%= link_to_filter('all') %> |
    <%= link_to_filter('comments') %> |
    <%= link_to_filter('stories') %>

  </div>

  <div class="legend">
    <%= @heading %>
  </div>
</div>

<ol class="comments comments1">
  <% @replies.each do |reply| %>
  <li class="comments_subtree">
    <%= render "comments/comment",
	comment: reply.comment,
	show_story: true,
	is_unread: reply.is_unread %>
    <ol class="comments"></ol>
  </li>
  <% end %>
</ol>

<% @filter != 'unread' && if @replies.count > RepliesController::REPLIES_PER_PAGE %>
<div class="morelink">
  <% if @page && @page > 1 %>
  <a href="/replies<%= @page == 2 ? "" : "/page/#{@page - 1}" %>">&lt;&lt; 
    Page <%= @page - 1 %></a>
  <% end %>

  <% if @replies.any? %>
  <% if @page && @page > 1 %>
  |
  <% end %>

  <a href="/replies/page/<%= @page + 1 %>">Page
    <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>
<% end %>
